<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    tools:context="se.aimaralopez.nilshotel.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_container_size">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/small_double_room"


                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/logo_dimen"
                android:layout_height="@dimen/logo_dimen"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerInside"
                android:src="@drawable/nh_logo" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buttonArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_area">


            <Button
                android:layout_width="@dimen/layout_width"
                android:layout_height="@dimen/layout_height"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/button_margin"
                android:layout_marginLeft="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:background="@color/button_color"
                android:text="@string/book_now"
                android:textColor="@color/textBar" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_content_margin"
                android:layout_marginStart="@dimen/main_content_margin"
                android:paddingTop="@dimen/main_title_padding"
                android:text="@string/contact"
                android:textSize="@dimen/main_title_textSize" />

            <TextView
                style="@style/WrapContentValues"
                android:layout_marginEnd="@dimen/main_content_margin"
                android:layout_marginLeft="@dimen/main_content_margin"
                android:layout_marginRight="@dimen/main_content_margin"
                android:layout_marginStart="@dimen/main_content_margin"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/contact_us" />

            <LinearLayout
                android:id="@+id/icons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="0"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/WrapContentValues"
                    android:layout_marginLeft="@dimen/main_content_margin"
                    android:layout_marginStart="@dimen/main_content_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/address"
                        style="@style/WrapContentValues.icons"
                        android:paddingLeft="5dp"
                        android:text="@string/fa_map_marker"
                        android:textSize="@dimen/app_icon_size" />

                    <TextView
                        style="@style/WrapContentValues.info"
                        android:paddingLeft="@dimen/icon_text_Adjustpadding_left"
                        android:text="@string/hotel_address" />

                </LinearLayout>

                <LinearLayout
                    style="@style/WrapContentValues"
                    android:layout_marginLeft="@dimen/main_content_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/telephone"
                        style="@style/WrapContentValues.icons"
                        android:text="@string/fa_mobile_phone"
                        android:textSize="@dimen/app_icon_size" />

                    <TextView
                        style="@style/WrapContentValues.info"
                        android:text="@string/telephone" />

                </LinearLayout>

                <LinearLayout
                    style="@style/WrapContentValues"
                    android:layout_marginLeft="@dimen/main_content_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/email"
                        style="@style/WrapContentValues.icons"
                        android:text="@string/fa_envelope_mail"
                        android:textSize="@dimen/app_iconMap_adjust_size" />

                    <TextView
                        style="@style/WrapContentValues.info"
                        android:text="@string/email" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
